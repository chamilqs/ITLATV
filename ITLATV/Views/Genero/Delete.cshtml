@using ITLATV.Core.Application.ViewModels.Generos;
@model SaveGeneroViewModel
@{
    ViewData["Title"] = "Eliminar genero";
}

<div class="row">

    <div class="col-6 offset-3" >
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>¿Está seguro que desea eliminar el género @Model.Nombre?</h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Genero" asp-action="DeletePost">
                
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Genero" asp-action="Index" class="btn btn-warning">Cancelar</a>
                
                </form>

            </div>
        </div>
    </div>

</div>

