@using ITLATV.Core.Application.ViewModels.Series;
@model SaveSerieViewModel
@{
    ViewData["Title"] = "Detalle";
}

<h1 class="text-center">Usted está viendo la serie:</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card text-center">
                <div class="card-header fs-3"><strong>@Model.Nombre</strong></div>
                <div class="card-body bg-black">
                    <figure>
                        <iframe width="100%" height="750" src="@Model.EnlaceVideo" title="@Model.Nombre" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                    </figure>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-lg">Regresar al inicio</a>
                </div>
            </div>
        </div>
    </div>
</div>

